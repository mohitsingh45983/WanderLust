<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= showListing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= showListing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <br />
        <%= showListing.description %>
        <br />
        &#8377; <%= showListing.price ?
        showListing.price.toLocaleString("en-IN") : "N/A" %>
        <br />
        <%= showListing.country %>
        <br />
        <%= showListing.location %>
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href="/listings/<%= showListing._id%>/edit"
      class="btn btn-dark edit-btn col-1 offset-3"
      >Edit</a
    >

    <form method="POST" action="/listings/<%= showListing._id%>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-3 mt-5 mb-3">
    <h4>Leave a Review</h4>
    <form method="POST" action="/listings/<%= showListing._id%>/reviews" >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
        ></textarea>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>
