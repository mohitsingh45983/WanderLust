<% layout('/layouts/boilerplate') -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Listing Details</h3>
    </div>

    <div class="card col-6 offset-3 show-card">
      <img
        src="<%= showListing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= showListing.title %></b>
          <br />
          <%= showListing.description %>
          <br />
          &#8377; <%= showListing.price.toLocaleString("en-IN")%>
          <br />
          <%= showListing.country %>
          <br />
          <%= showListing.location %>
        </p>
      </div>
    </div>

    <div class="btns">
      <a
        href="/listings/<%= showListing._id%>/edit"
        class="btn btn-dark edit-btn col-1 offset-3"
        >Edit</a
      >

      <form
        method="POST"
        action="/listings/<%= showListing._id%>?_method=DELETE"
      >
        <button class="btn btn-dark offset-4">Delete</button>
      </form>
    </div>
  </div>
</body>
